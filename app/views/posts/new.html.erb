<div class="box form">
	<h2>投稿フォーム</h2>
	<%= form_for(@post, class: "form") do |f| %>
	<%= f.text_field :title, placeholder: "タイトル" %>
	<%= f.text_area :description, placeholder: "説明" %>
	<label class="text-c margin-t-1">
	写真を選択
    </label>
	<%= f.attachment_field :image %>
	<div class="actions">
		<%= f.submit "投稿", class: "btn btn-primary" %>
	</div>
	<% end %>
</div>