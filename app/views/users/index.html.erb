<div class="search">
	<%= search_form_for @q, class: "search__form" do |f| %>
	<%= f.label :name_cont, "キーワードでユーザーを検索" %>
    <%= f.search_field :name_cont, placeholder: "キーワード", class: "search__form--field" %>
	<%= f.submit "検索" %>
	<% end %>
</div>

<h3>Users</h3>

<div class="users-index">
 <% @users.each do |user| %>
 <%= attachment_image_tag user, :image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
 <p>
 <%= link_to user.name, user %>
</p>
<%= render 'users/follow_btn', user: user %>

 <div class="users-index__posts">
 	<% user.posts.first(3).each do |post| %>
 	<%= link_to(post) do %>
 	<%= attachment_image_tag post, :image, class: "users-index__posts--picture" %>
 	<% end %>
 	<% end %>
 </div>
 <% end %>
</div>
